<%= form_for [@project, @part] do |f| %>
  <fieldset>
    <legend>Add a New Part</legend>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :part_number, class: :prefix %>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :part_number %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :name, class: :prefix %>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :description, class: :prefix %>
      </div>
      <div class="small-9 columns">
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="row collapse">
      <div class="small-3 columns">
        <%= f.label :datasheet_url, "Datasheet URL", class: :prefix %>
      </div>
      <div class="small-6 columns">
        <%= f.text_field :datasheet_url %>
      </div>
      <div class="small-3 columns">
        <%= f.submit "Add", class: "button, postfix" %>
      </div>
    </div>
  </fieldset>
<% end %>
